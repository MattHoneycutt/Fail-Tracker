@using FailTracker.Web.Data
@using FailTracker.Web.Infrastructure
@using Heroic.Web.IoC
@model string
@{
    var dbContext = Context.GetContainer().GetInstance<ApplicationDbContext>();

    var availableUsers = dbContext.Users.Select(u => new SelectListItem
    {
        Text = u.UserName,
        Value = u.Id,
        Selected = u.Id == Model
    }).ToArray(); 
}

@Html.DropDownList("", availableUsers, new { @class = "form-control" })